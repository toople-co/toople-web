		<section id="home">
		{{ with .error}}
			<p><strong style="color:#fcc;">{{ . }}</strong></p>
		{{ end }}
		{{ with .feed }}
			<ul>
			{{ range . }}
				{{ with .Event }}
					<li class="event">
						<a role="button" href="/dismiss" title="Not available/interested">✕</a>
						<h3>{{ .Title }}</h3>
						<div>
							<time datetime="{{ .Date }}">{{ .PrettyDate }}</time>
							@ {{ .Location }}
						</div>
						{{ with .Info }}<p>{{ . }}</p>{{ end }}
						<p>Status: <em>{{ .Status }}</em></p>
						<a role="button" href="/join" title="Join the event">✔︎ Join</a>
					</li>
				{{ end }}
				{{ with .Circle }}
					<li class="circle">
						<p><span>You're in!</span> You have joined “{{ .Name }}” circle.</p>
					</li>
				{{ end }}
			{{ end }}
			</ul>
		{{ else }}
			<p>No new notifications or upcoming events.</p>
		{{ end }}
			<p>
				<strong>{{ html .loggedin_text }}</strong>
				<br><a href="/settings">Settings</a> • <a href="/logout">{{ .logout_button }}</a>
			</p>
		</section>