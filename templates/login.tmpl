		<section id="login">
			{{ with .error }}<strong style="color: #e00;">{{ . }}</strong>{{ end }}
			<form action="/login" method="post">
				<fieldset>
					<legend>{{ .email_section }}</legend>
					<label for="email">{{ .email_label }}</label>
					<input type="email" name="email" id="email" placeholder="{{ .email_placeholder }}"{{ with .email }} value="{{ . }}"{{ end }}>
					<label for="password">{{ .password_label }}</label>
					<input type="password" name="password" id="password" placeholder="{{ .password_placeholder }}">
					<small>{{ .password_comment }}</small>
					<input type="submit" value="{{ .email_submit }}">
				</fieldset>
				<fieldset>
					<legend>{{ .openid_section }}</legend>
					<ul>
						<li><a href="#" role="button" class="google">Google</a></li>
						<li><a href="#" role="button" class="twitter">Twitter</a></li>
						<li><a href="#" role="button" class="facebook">Facebook</a></li>
						<li><a href="#" role="button" class="openid">OpenID</a></li>
					</ul>
				</fieldset>
			</form>
		</section>